<div class="library2">
    This Blazor component is defined in the <strong>Library2</strong> package.

    <div>
        @if (Product != null)
        {
            <text>
                <img src="@Product.Image" class="rounded float-right" alt="@Product.Name">
                Product: @Product.Name<br />

                Grommets: @Product.Grommets<br />
            </text>
        }
        else
        {
            <b>
                No product2 selected
            </b>
        }
    </div>
</div>
@functions {

    [Parameter]
    private Product2 Product { get; set; }

}